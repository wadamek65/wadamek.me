---
import BlogComment from '../BlogComment.astro';
interface Props {
	comments: any[];
}

const { comments } = Astro.props;
console.log(comments);
---

<div class="flex flex-col">
	{
		comments.map((comment, index) => (
			<span>
				<BlogComment {...comment} />
				{index !== comments.length - 1 && (
					<hr class="mb-16 mt-6 w-6 border-dashed border-mirage-500" />
				)}
			</span>
		))
	}
</div>
